{
  "name": "refined-whatsapp",
  "version": "0.1.0",
  "description": "Supercharge Whatsapp Web with hotkeys and custom themes",
  "main": "index.js",
  "scripts": {
    "lint": "eslint --ext .ts,.tsx ./",
    "start": "rollup -c rollup.config.js -w",
    "prebuild": "rm -rf dist",
    "build": "NODE_ENV=production rollup -c rollup.config.js",
    "build:zip": "npm run build && zip -r refined-whatsapp.zip dist"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/campvanilla/ideal-octo-chainsaw.git"
  },
  "author": "Abinav Seelan <abinav.n.seelan@gmail.com>, Aditi Mohanty <aditi.anomita@gmail.com>",
  "license": "BSD-3-Clause",
  "bugs": {
    "url": "https://github.com/campvanilla/ideal-octo-chainsaw/issues"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.{js,jsx,ts,tsx,json,css}": [
      "eslint"
    ]
  },
  "homepage": "https://github.com/campvanilla/ideal-octo-chainsaw#readme",
  "devDependencies": {
    "@babel/core": "^7.9.6",
    "@babel/preset-env": "^7.9.6",
    "@rollup/plugin-babel": "^5.0.0",
    "@rollup/plugin-commonjs": "^11.1.0",
    "@rollup/plugin-node-resolve": "^7.1.3",
    "@rollup/plugin-replace": "^2.3.2",
    "@rollup/plugin-typescript": "^4.1.1",
    "@typescript-eslint/eslint-plugin": "^2.33.0",
    "@typescript-eslint/parser": "^2.33.0",
    "core-js": "^3.6.5",
    "eslint": "^6.8.0",
    "husky": "^4.2.5",
    "lint-staged": "^10.2.2",
    "prettier": "^2.0.5",
    "rollup": "^2.10.0",
    "rollup-plugin-chrome-extension": "^2.2.0",
    "rollup-plugin-terser": "^5.3.0",
    "typescript": "^3.9.2"
  },
  "dependencies": {
    "@types/chrome": "0.0.108"
  }
}
